// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                    String               @id @default(cuid())
  email                 String               @unique
  name                  String?
  password              String?
  image                 String?
  phone                 String?
  auth_method           String               @default("credentials")
  properties            Property[]
  bookmarked_properties BookmarkedProperty[]
}

model Property {
  id                 String               @id @default(cuid())
  title              String
  description        String
  location           String
  type               String
  mode               String
  price              Int
  space              Int
  rooms              Int
  bathrooms          Int
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  ownerId            String
  images             PropertyImage[]
  BookmarkedProperty BookmarkedProperty[]
  owner              User                 @relation(fields: [ownerId], references: [id], onDelete: Cascade)
}

model PropertyImage {
  id          Int      @id @default(autoincrement())
  url         String
  properityId String
  property    Property @relation(fields: [properityId], references: [id], onDelete: Cascade)
}

model BookmarkedProperty {
  id         String   @id @default(cuid())
  propertyId String
  userId     String
  property   Property @relation(fields: [id], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}
